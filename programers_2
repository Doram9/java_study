class Solution {
    boolean solution(String s) {
        int a = 0, b = 0;
        boolean answer;
          for(int i = 0; i <  s.length(); i++) {
             if(s.charAt(i) == 'p' || s.charAt(i) == 'P') {
                a++;
             }
             else if(s.charAt(i) == 'y' || s.charAt(i) == 'Y') {
                b++;
             }
          }
          if(a == b) {
              return true;
          }
          else {
             return false;
          }
    }
}
